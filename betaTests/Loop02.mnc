//  Loop02.mnc
//
//  Simple loops using break statements.

decs{
	int: n, k;
}
	shout "Enter a positive integer upper limit for counting: ";
	listen n;
	shout "";
	k = 1;
	shout "Forward: ";
	do
		shout k;
		if (k == n) break;
		k= k + 1;
	until (false);
	shout ""; shout "";
	
	k = n;
	shout "Backward: ";
	do
		shout k;
		if (k == 1) break;
		k = k - 1;
	until (false);

	shout ""; shout "";
